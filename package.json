{
    "name": "living-room",
    "version": "1.0.0",
    "description": "",
    "type": "module",
    "source": [
        "src/index.html"
    ],
    "scripts": {
        "start-tv": "cross-env ENV=DEV PORT=4321 parcel src/tv/index.html --dist-dir ./dist/tv --hmr-port 1235",
        "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest",
        "format": "bash scripts/format.sh",
        "format-check": "prettier --check . && python -m black . --check --include=\"\\.py\" --exclude=\"\\.(json|sh)\"",
        "attach-githooks": "git config core.hooksPath gitHooks",
        "prestart-translator": "npm install",
        "pretest": "npm install",
        "build": "parcel build",
        "start": " docker-compose up -d --build && docker compose logs --follow",
        "setup": "docker volume create nodemodules && docker-compose -f docker-compose.builder.yml run --rm install",
        "start_insideDocker": "cross-env ENV=DEV PORT=5555 NODE_OPTIONS='--experimental-specifier-resolution=node' nodemon -L src/translator/server.js",
        "start-tv_insideDocker": "cross-env ENV=DEV PORT=4321 parcel src/tv/index.html --dist-dir ./dist/tv --hmr-port 1235"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arkhe-rit/living-room.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/arkhe-rit/living-room/issues"
    },
    "homepage": "https://github.com/arkhe-rit/living-room#readme",
    "devDependencies": {
        "assert": "^2.0.0",
        "events": "^3.3.0",
        "jest": "^28.1.1",
        "prettier": "^2.6.2",
        "process": "^0.11.10",
        "querystring-es3": "^0.2.1",
        "stream-http": "^3.2.0",
        "url": "^0.11.0",
        "util": "^0.12.4"
    },
    "dependencies": {
        "@koa/router": "^12.0.0",
        "aedes": "^0.48.0",
        "buffer": "^6.0.3",
        "cross-env": "^7.0.3",
        "express": "^4.18.1",
        "koa": "^2.13.4",
        "lodash": "^4.17.21",
        "nodemon": "^2.0.22",
        "observable-fns": "^0.6.1",
        "parcel": "^2.7.0",
        "redis": "^4.6.7",
        "socket.io": "^4.5.1",
        "socket.io-client": "^4.5.1"
    },
    "jest": {
        "transform": {}
    }
}
